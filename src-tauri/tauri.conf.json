{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/refs/heads/2.x/tooling/cli/schema.json",
  "productName": "CopyMan",
  "version": "0.1.0",
  "identifier": "com.copyman.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "CopyMan",
        "width": 600,
        "height": 500,
        "resizable": true,
        "center": true,
        "visible": false,
        "decorations": true,
        "alwaysOnTop": true,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "Cross-platform clipboard manager",
    "longDescription": "Fast, lightweight clipboard manager with unlimited history and powerful search"
  }
}
